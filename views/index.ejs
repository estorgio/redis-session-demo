<% include partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>Add data to session</h3>
      <form class="form-inline" action="/" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <input class="form-control" type="text" name="data[key]" placeholder="Key">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="data[value]" placeholder="Value">
        </div>
        <button class="btn btn-primary">Add data</button>
      </form>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h3>Data stored in session</h3>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Key</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
          <% if (sessionData && sessionData.length > 0) { %>
          <% sessionData.forEach((data) => { %>
          <tr>
            <td><%= data.key %></td>
            <td><%= data.value %></td>
          </tr>
          <% }) %>
          <% } else { %>
          <tr>
            <td colspan="2" class="text-center">List is currently empty.</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% include partials/footer %>